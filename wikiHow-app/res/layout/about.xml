<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ImageView android:id="@+id/about_image" android:src="@drawable/about_wikihow"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:paddingTop="35sp" android:paddingBottom="25sp" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/about_version"
		android:textStyle="bold" android:paddingLeft="20sp"
		android:paddingRight="20sp" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/about_text"
		android:paddingTop="10sp" android:paddingLeft="20sp"
		android:paddingRight="20sp"/>
</LinearLayout>
